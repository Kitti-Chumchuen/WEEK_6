#include <stdio.h>
int main (){
  int a;
  printf("Enter a number : ");
  scanf("%d",&a);
  int c=a;
  int b=a*2-1;
  for(int i=0; i<a; i++){
    for(int x=0; x<=b; x++){
       if(x>=c-i && x<=c+i){
        printf("*");
      }
      else if(i+1==a && x+2>=b){
        printf("*");
      }
      else{
        printf(" ");
      }
    }
    printf("\n");
  }
  return 0;
}
